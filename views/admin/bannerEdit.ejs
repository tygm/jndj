                    <div class="header">
                        <h1 class="page-header">
                            编辑轮播图
                            <small></small>
                        </h1>

                    </div>

                    <div id="page-inner">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        编辑
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-lg-6 form-bottom">
                                                <form id="form" role="form" method="POST" action="/banner/edit" enctype="multipart/form-data">
                                                    <div class="form-group">
                                                        <label>标题</label>
                                                        <input name="name" value="<%=results.name%>" class="form-control" placeholder="">
                                                    </div>

                                                    <div class="form-group">
                                                        <label>详细内容</label>
                                                        <textarea name="descs" value="<%=results.descs%>" 
                                                                id="content"
                                                            class="form-control" placeholder="">
                                                            <%=results.descs%>
                                                        </textarea>
                                                        <div id="contentDiv"></div>
                                                    </div>
                                                    <input name="type" value="<%=results.type%>" type="hidden">

                                                    <input name="id" type="hidden" value="<%=id%>" class="form-control" placeholder="">
                                                    <div class="form-group">
                                                        <label>排序</label>
                                                        <input name="orders" value="<%=results.orders%>" class="form-control" placeholder="">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>图片（不传则保持原图片不变）</label>
                                                        <input name="file1" type="file" accept="image/*" class="form-control" placeholder="">
                                                    </div>
                                                    <button type="submit" class="btn btn-default btn-block">提交</button>
                                                </form>
                                            </div>
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                                    <!-- /.panel-body -->
                                </div>
                                <!-- /.panel -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                    </div>
                    <!-- /. PAGE INNER  -->
                </div>
                <!-- /. PAGE WRAPPER  -->
